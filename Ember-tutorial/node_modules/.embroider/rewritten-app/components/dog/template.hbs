<div class="place-content-center ">
    <div>
        <h2 class="mb-2 text-center text-2xl">Vamos a mostrar perros aleatorios</h2>
    </div>
    <div class="mb-2  flex items-center justify-center ">
        <button class=" bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700
            rounded  " {{on "click" (fn this.updateDogState 'dog' )}}>Get a random dog image</button>

    </div>
    <div class="mb-2  flex items-center justify-center ">
        <button class=" bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700
            rounded  " {{on "click" (fn this.updateDogState 'boxer' )}}>Change to boxer</button>
    </div>
    <div class=" mb-2 flex items-center justify-center ">

        <img class="w-50 h-50 " src={{this.dogImage}} alt='Random Dog' {{did-insert this.getRandomDog}}>

    </div>

    <div class=" mb-2 flex items-center justify-center ">


        <img class="w-50 h-50 " src={{this.dogImage}} alt='Random Dog' {{did-update this.updateDog
            this.dogImageUpdated}}>

    </div>




</div>